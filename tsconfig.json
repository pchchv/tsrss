{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "ES2020",
            "esnext"
        ],
        "paths": {
            "@/*": ["*"]
        },
        "strict": true,
        "noEmit": true,
        "allowJs": true,
        "outDir": "dist",
        "baseUrl": "src",
        "sourceMap": true,
        "module": "esnext",
        "jsx": "react-jsx",
        "incremental": true,
        "skipLibCheck": true,
        "declaration": false,
        "removeComments": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}